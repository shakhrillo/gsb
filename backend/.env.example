# Push Notification Configuration

# Expo Access Token (optional, for enhanced security)
# Get this from https://expo.dev/accounts/[account]/settings/access-tokens
EXPO_ACCESS_TOKEN=

# Push Notification Settings
PUSH_NOTIFICATION_ENABLED=true
PUSH_RECEIPT_CHECK_INTERVAL=15  # minutes

# Database & Firebase
FIREBASE_CONFIG=path/to/firebase-config.json

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here

# SMS Service Configuration (Eskiz.uz)
ESKIZ_LOGIN=your-eskiz-email@domain.com
ESKIZ_API_KEY=your-eskiz-api-key
ESKIZ_API_URL=https://notify.eskiz.uz/api

# Application Settings
APP_ENVIRONMENT=development
PORT=3000

# OTP & SMS Settings
# Set to 'true' to skip SMS sending in development (OTPs will be logged to console)
SKIP_SMS=false

# Merchant Settings
MERCHANT_SECRET=your-merchant-secret-key

# Development Settings
# Set to 'true' to enable debug logging
DEBUG=true

# Example settings (add these to your existing .env file)
# EXPO_ACCESS_TOKEN=expo_secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# JWT_SECRET_KEY=your-jwt-secret-key-at-least-32-characters-long
# ESKIZ_LOGIN=your-email@example.com
# ESKIZ_API_KEY=your-eskiz-api-key
